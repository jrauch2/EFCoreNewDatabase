@using EFCoreNewDatabase.Models
@model PostViewModel

@Model.blog.Url Details
<hr />

@if (Model.Posts.Count() == 0)
{
    <p>There are no posts</p>
}
else
{
    <ul>
        @foreach (Post post in Model.Posts)
        {
            <li>
                @post.Title - @post.Content | <a asp-action="DeletePost" asp-route-id="@post.PostId">Delete</a>
            </li>
        }
    </ul>
}

<hr />
<a asp-action="Index">Home</a> | <a asp-action="AddPost" asp-route-id="@Model.blog.BlogId">New Post</a>
